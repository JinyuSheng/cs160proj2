<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">

    <TextView
        android:id="@+id/ColorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/eraserBut"
        android:text="Color" />

    <SeekBar
        android:id="@+id/colorBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ColorText"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ColorText"
        android:background="@drawable/colorspectrum"
        android:max="100"
        android:scrollbarStyle="insideOverlay" />

    <ToggleButton
        android:id="@+id/eraserBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textOff="Erase\nMode"
        android:textOn="Draw\nMode"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/brushText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ColorText"
        android:layout_alignTop="@+id/brushBar"
        android:text="Width" />

    <SeekBar
        android:id="@+id/brushBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/colorBar"
        android:layout_below="@+id/colorBar"
        android:layout_toRightOf="@+id/brushText"
        android:background="@drawable/triangle"
        android:max="100"
        android:progress="25"
        android:scrollbarStyle="insideOverlay" />

    <ImageView
        android:id="@+id/iv_canvas"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/brushBar" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset" />

        <Button
            android:id="@+id/saveBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/resetBut"
            android:layout_toRightOf="@+id/resetBut"
            android:text="Save" />

        <Button
            android:id="@+id/pickBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/resetBut"
            android:layout_toRightOf="@id/saveBut"
            android:text="Pick" />

        <Button
            android:id="@+id/submitBut"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/resetBut"
            android:layout_toRightOf="@+id/pickBut"
            android:text="Submit" />
    </RelativeLayout>

</RelativeLayout>
